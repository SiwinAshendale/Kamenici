@model Kamenici.ViewModels.EditFrameViewModel

@{
    ViewData["Title"] = "Edit Frame";
}

<h1>Edit Frame</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFrame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FrameId" />
            <input asp-for="Width"  type="hidden" />
            <input asp-for="Height"  type="hidden" />
            <div class="form-check m-1">
                <input asp-for="Available" class="form-check-input" />
                <label asp-for="Available" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllFrames">Back to List</a>
</div>